@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel


<div class="text-center">
    <h1 class="display-4">Congo</h1>
    <p>Welcome to Congo, where books are as plentiful as the trees in the second-largest rainforest in the world.</p>
    <small>(The first was already taken.)</small>
</div>
@* New Bootstrap Commands: align-content-center, card-subtitle, display-4   *@

<div class="container">
    <div class="row">
        @foreach (var x in Model.Books)
        {
            <div class="col-lg">
                <div class="card" style="width: 50rem; margin: 1rem;">
                    <div class="card-body">
                        <h5 class="card-title">@x.BookID. @x.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@x.Author</h6>
                        <p class="card-text">Category: @x.Category</p>
                        <p class="card-text">Publisher: @x.Publisher </p>
                        <p class="card-text">ISBN: @x.ISBN</p>
                        <p class="card-text">Pages: @x.NumPages</p>
                        <p class="card-text">Price: $@x.Price</p>
                        <a href="#" class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-sm">
                <br /><br /><br />
                <img class="align-content-center" src="~/book.svg" />
            </div>
        }
    </div>
    <div page-model="@Model.PagingInfo" page-action="Index"
         page-classes-enabled="true"
         page-class="btn"
         page-class-normal="btn-outline-dark"
         page-class-selected="btn-primary"
         class="btn-group pull-right m-1"></div>
</div>


