@model IEnumerable<string>

    <nav class="navbar navbar-default navbar-expand-lg">
        <div class="container-fluid">
            <ul class="nav navbar-nav m-3">
                @*Since we have our "Home" Nav Item in our site navbar, I've commented it out here.*@
                @*<li>
                    <a class="btn btn-block btn-outline-secondary nav-item "
                       asp-action="Index"
                       asp-controller="Home"
                       asp-route-category="">
                        Home
                    </a>
                </li>*@
                @foreach (string category in Model)
                {
                <li>
                    <a class="btn btn-block nav-item @(category == ViewBag.ActiveCategory ? "btn-primary" : "btn-outline-secondary")"
                        asp-action="Index"
                        asp-controller="Home"
                        asp-route-category="@category"
                        asp-route-page="1">
                        @category
                    </a>
                </li>
                }
            </ul>
        </div>
    </nav>